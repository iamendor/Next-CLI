{
  "compilerOptions": {
    /*Base*/
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ESNext",
    "moduleDetection": "force",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    /*Strictness*/
    "strict": true,
    "noImplicitAny": true,
    /*Compilation*/
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    /*Runtime*/
    "lib": ["esnext"],
    "declaration": true
  }
}
